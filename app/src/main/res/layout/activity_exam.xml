<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/light_gray">

        <LinearLayout
            android:id="@+id/serial_number"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exam_serial_number" />

            <TextView
                android:id="@+id/serial_number_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/100"
                style="@style/SubtitleText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/error_count"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exam_error" />

            <TextView
                android:id="@+id/error_count_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已错0题"
                style="@style/SubtitleText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/collect"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exam_collect" />

            <TextView
                android:id="@+id/collect_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏本题"
                style="@style/SubtitleText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exam_submit" />

            <TextView
                android:id="@+id/submit_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交卷"
                style="@style/SubtitleText" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>